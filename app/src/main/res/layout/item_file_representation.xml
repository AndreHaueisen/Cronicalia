<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/push_file_up_button"
        style="@android:style/Widget.Material.Light.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimarySmooth"
        android:src="@drawable/ic_arrow_upward_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/chapter_title_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/chapter_title_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimarySmooth"
        android:textAlignment="center"
        android:textColorHint="@color/text_tertiary"
        app:counterMaxLength="30"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/push_file_up_button"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            style="@style/EditTextDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/chapter_number_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:padding="8dp"
            android:textStyle="bold"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/file_uri_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chapter_title_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/chapter_title_input_layout"
        tools:text="/cache/drive/the_foolish_boy"/>

</android.support.constraint.ConstraintLayout>